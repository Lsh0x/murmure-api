# Murmure gRPC Server Configuration
# Copy this file to .env and update the paths as needed

# ============================================================================
# STT (Speech-To-Text) Configuration
# ============================================================================

# Path to Parakeet STT model directory (required for STT)
# Model should be located at: resources/stt/parakeet-tdt-0.6b-v3-int8/
MURMURE_MODEL_PATH=./resources/stt/parakeet-tdt-0.6b-v3-int8

# Path to cc-rules directory (required for STT)
# Rules should be located at: resources/cc-rules/
MURMURE_CC_RULES_PATH=./resources/cc-rules

# Custom dictionary words as JSON array (optional)
# Example: MURMURE_DICTIONARY='["John Doe", "Jane Smith", "Custom Word"]'
MURMURE_DICTIONARY=

# ============================================================================
# TTS (Text-To-Speech) Configuration (Optional)
# ============================================================================

# Path to Piper TTS model directory (optional, for TTS)
# Models should be located at: resources/tts/
# Should contain .onnx and .onnx.json files
MURMURE_TTS_MODEL_PATH=./resources/tts

# Audio sample rate in Hz (default: 22050)
MURMURE_TTS_SAMPLE_RATE=22050

# Speaker ID for multi-voice models (optional)
# Use 0 for single-voice models or to select first voice
MURMURE_TTS_SPEAKER_ID=0

# ============================================================================
# Server Configuration
# ============================================================================

# gRPC server port (default: 50051)
MURMURE_GRPC_PORT=50051

# Logging level: trace, debug, info, warn, error (default: info)
MURMURE_LOG_LEVEL=info
