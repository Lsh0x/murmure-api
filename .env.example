# Murmure gRPC Server Configuration
# Copy this file to .env and modify as needed

# Path to the Parakeet model directory
# If not set, the server will look in ./resources/parakeet-tdt-0.6b-v3-int8
# Download from: https://github.com/Kieirra/murmure-model/releases/download/1.0.0/parakeet-tdt-0.6b-v3-int8.zip
MURMURE_MODEL_PATH=./resources/parakeet-tdt-0.6b-v3-int8

# Path to the cc-rules directory (for dictionary corrections)
# If not set, the server will look in ./resources/cc-rules
MURMURE_CC_RULES_PATH=./resources/cc-rules

# Custom dictionary words as JSON array (optional)
# Use this to fix specific words that are often mis-transcribed
# Example: ["John Doe", "Jane Smith", "Company Name"]
# Leave empty or omit to disable dictionary corrections
MURMURE_DICTIONARY=[""]

# gRPC server port
# Default: 50051
MURMURE_GRPC_PORT=50051

# Logging level (trace, debug, info, warn, error)
# Default: info
# Use 'trace' for detailed debugging, 'info' for normal operation
MURMURE_LOG_LEVEL=info
